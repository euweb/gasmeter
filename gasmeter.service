[Unit]
Description=Gas Meter Reader Service
After=network.target mosquitto.service
Wants=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/gas_reader
ExecStart=/usr/bin/python3 /home/pi/gas_reader/gasmeter.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
